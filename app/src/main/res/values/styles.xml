<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lime_dark</item>
        <item name="colorPrimaryDark">@color/lime_very_dark</item>
        <item name="android:textColorPrimary">@color/lime_very_light</item>
        <item name="android:actionModeBackground">@color/lime_very_dark</item>
        <item name="colorAccent">@color/lime_dark</item>
    </style>

    <style name="lime_tabs">
        <item name="android:background">@color/lime_dark</item>
        <item name="tabTextColor">@color/lime_very_light</item>
        <item name="tabSelectedTextColor">@color/lime_very_dark</item>
        <item name="tabIndicatorColor">@color/lime_very_dark</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="lime_translation_card" parent="CardView.Light">
        <item name="android:layout_marginTop">@dimen/translation_card_margin</item>
        <item name="android:layout_marginBottom">@dimen/translation_card_margin</item>
        <item name="cardCornerRadius">@dimen/translation_card_corner</item>
        <item name="elevation">@dimen/translation_card_elevation</item>
    </style>

    <style name="list_with_padding">
        <item name="android:paddingTop">@dimen/translation_card_padding</item>
        <item name="android:paddingLeft">@dimen/translation_card_padding</item>
        <item name="android:paddingBottom">@dimen/translation_card_padding</item>
        <item name="android:paddingRight">@dimen/translation_card_padding</item>
    </style>

    <style name="card_view_list">
        <item name="android:padding">@dimen/available_translations_list_padding</item>
        <item name="android:dividerHeight">@dimen/available_translations_list_space</item>
        <item name="android:divider">@color/safe_transparent</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="generated_code_options_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
